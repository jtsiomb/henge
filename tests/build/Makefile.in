src = $(wildcard *.cc)
obj = $(src:.cc=.o)
bin = $(app_name)$(bin_ext)

CXX = g++
CXXFLAGS = -ansi -pedantic -Wall $(dbg) $(opt) `pkg-config --cflags henge`
LDFLAGS = `pkg-config --libs henge` $(gl_libs)

$(bin): $(obj)
	$(CXX) -o $@ $(obj) $(LDFLAGS)

.PHONY: clean
clean:
	rm -f $(obj) $(lib_so) $(lib_a)
